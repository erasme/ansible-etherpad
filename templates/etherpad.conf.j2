server {
  listen   {{ etherpad.port }}; ## listen for ipv4; this line is default and implied

  root /home/{{ etherpad.deploy_user }}/etherpad/;
  index index.php;

  # Make site accessible from http://localhost/
  server_name _;

  access_log      /var/log/nginx/etherpad-access.log;
  error_log       /var/log/nginx/etherpad-error.log;

  location / {
    deny all;
  }

  error_page 404 /404.html;

  # redirect server error pages to the static page /50x.html
  #
  error_page 500 502 503 504 /50x.html;
  location = /50x.html {
    root /var/lib/nginx/;
  }

  location {{etherpad.path}} {
    rewrite {{etherpad.path}}?(.+)  /$1  break;
    proxy_pass http://localhost:{{etherpad.port|int + 1}}/;
    proxy_redirect / {{etherpad.path}};
    proxy_buffering off;
    proxy_set_header Host $host;
  }

  # deny access to .htaccess files, if Apache's document root
  # concurs with nginx's one
  #
  location ~ /\.ht {
    deny all;
  }
}
